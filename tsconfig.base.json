{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS", // Node.js モジュール形式
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "apps/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}